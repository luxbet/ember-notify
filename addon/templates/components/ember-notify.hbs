{{#each messages as |message|}}
  {{#if hasBlock}}
    {{#ember-notify/message
       message=message
       theme=theme
       closeAfter=closeAfter
       class='ember-notify clearfix'
       numOfMsgLeft=messages.length
       as |message close|
    }}
      {{yield message close}}
    {{/ember-notify/message}}
  {{else}}
    {{ember-notify/message
      message=message
      theme=theme
      closeAfter=closeAfter
      class='ember-notify clearfix'
      numOfMsgLeft=messages.length
    }}
  {{/if}}
{{/each}}
